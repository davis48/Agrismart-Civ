# ================================================
# AgriSmart CI - Configuration Environnement
# ================================================
# Copier ce fichier en .env et modifier les valeurs

# ================================================
# GENERAL
# ================================================
NODE_ENV=development

# ================================================
# POSTGRESQL
# ================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agrismart
DB_USER=agrismart
DB_PASSWORD=agrismart_secure_password

# ================================================
# REDIS
# ================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# ================================================
# JWT Authentication
# ================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ================================================
# INFLUXDB (IoT Service)
# ================================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_PORT=8086
INFLUXDB_USER=agrismart
INFLUXDB_PASSWORD=influx_secure_password
INFLUXDB_TOKEN=my-super-secret-influxdb-token
INFLUXDB_ORG=agrismart
INFLUXDB_BUCKET=sensors

# ================================================
# MQTT (IoT Service)
# ================================================
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=agrismart
MQTT_PASSWORD=mqtt_secure_password

# ================================================
# AI SERVICE
# ================================================
AI_SERVICE_URL=http://localhost:5000
USE_GPU=false

# ================================================
# TWILIO (SMS/WhatsApp)
# ================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ================================================
# OPENWEATHER API
# ================================================
OPENWEATHER_API_KEY=your_openweather_api_key

# ================================================
# PGADMIN (Dev only)
# ================================================
PGADMIN_EMAIL=admin@agrismart.ci
PGADMIN_PASSWORD=admin
